
@(parent := architecture_support)
def x86_configurations():

    require (arch_x86)

    @flag
    def x86_bl_mb() -> bool:
        when (x86_bl is "mb")
    
    @flag
    def x86_bl_mb2() -> bool:
        when (x86_bl is "mb2")
    
    @"Use SSE2/3/4 extension"
    def x86_enable_sse_feature() -> bool:
        """ 
            Config whether to allow using SSE feature for certain
            optimization
        """

        return False

    @"Bootloader Model"
    def x86_bl() -> "mb" | "mb2":
        """
            Select the bootloader interface
            
            Supported interface
                mb:      multiboot compliance
                mb2:     multiboot2 compliance
                none:    do not use any interface
        """

        return "mb"